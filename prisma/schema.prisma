datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Currency {
  NOK
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  fromAccount String?
  toAccount   String?
  amount      Int      @default(0)
  currency    Currency @default(NOK)
  description String?
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}
